<UserControl x:Class="NetsyGui.Controls.Listings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:NetsyGui.Controls"
    xmlns:ValueConverters="clr-namespace:NetsyGui.ValueConverters">
    <UserControl.Resources>
        <ValueConverters:WidthToColumnCountValueConverter x:Key="WidthToColumnCountValueConverter" />
    </UserControl.Resources>
    <Grid>
        <ListBox 
                x:Name="listingsListBox"
                ItemsSource="{Binding}" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding ElementName=listingsListBox, Path=ActualWidth, Converter={StaticResource WidthToColumnCountValueConverter}}"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Controls:ListingSmall />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
