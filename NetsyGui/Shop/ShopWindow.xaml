<Window x:Class="NetsyGui.Shop.ShopWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:NetsyGui="clr-namespace:NetsyGui"
    Title="Shop" 
    Height="300"
    DataContext="{x:Static NetsyGui:Locator.ShopWindowViewModel}">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Label 
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center" 
                    Content="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>
        <StackPanel>
            <TextBlock FontWeight="Bold" Text="{Binding Shop.Name}" TextWrapping="Wrap"></TextBlock>
            <Image Source="{Binding Shop.BannerImageUrl}" HorizontalAlignment="Left" Stretch="None"></Image>
            <TextBlock FontWeight="Bold" Text="{Binding Shop.Title}" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
