<Window x:Class="NetsyGui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Netsy Gui" Height="500" Width="500">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button Content="Reload" x:Name="reload" Click="ReloadClick" />
        </StackPanel>
        <Grid>
            <ListBox ItemsSource="{Binding Listings}">  
                <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5,0,0,5">
                        <TextBlock FontWeight="Bold" Text="{Binding Title}"></TextBlock>
                        <Image Source="{Binding ThumbnailImageUrl}" HorizontalAlignment="Left"></Image> 
                        <TextBlock Text="{Binding PriceData}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
